@namespace BlazorFabric
@inherits FabricComponentBase


@if ((Type != null && Type == LinkType.Anchor) || (Type == null && !string.IsNullOrWhiteSpace(Href)))
{
    <a href=@(Disabled ? "" : Href) target=@Target class=@($"ms-Link {(Disabled ? "isDisabled" : "")} {ClassName}") aria-disabled=@Disabled style=@Style>
        @ChildContent
    </a>
}
else
{
    <button type="button" class=@($"ms-Link isButton {(Disabled ? "isDisabled" : "")} {ClassName}") disabled=@Disabled aria-disabled=@Disabled style=@Style>
        @ChildContent
    </button>
}