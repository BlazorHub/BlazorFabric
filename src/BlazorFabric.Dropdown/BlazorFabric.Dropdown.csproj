<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <IsPackable>true</IsPackable>
    <LangVersion>7.3</LangVersion>
    <RazorLangVersion>3.0</RazorLangVersion>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <Authors>Lee McPherson</Authors>
    <Product></Product>
    <Description>Dropdown from Blazor port of Office Fabric UI</Description>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <RepositoryUrl>https://github.com/limefrogyank/BlazorFabric</RepositoryUrl>
    <PackageProjectUrl>https://github.com/limefrogyank/BlazorFabric</PackageProjectUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\BlazorFabric.BaseComponent\BlazorFabric.BaseComponent.csproj" />
    <ProjectReference Include="..\BlazorFabric.Button\BlazorFabric.Button.csproj" />
    <ProjectReference Include="..\BlazorFabric.Callout\BlazorFabric.Callout.csproj" />
    <ProjectReference Include="..\BlazorFabric.Checkbox\BlazorFabric.Checkbox.csproj" />
    <ProjectReference Include="..\BlazorFabric.FocusZone\BlazorFabric.FocusZone.csproj" />
    <ProjectReference Include="..\BlazorFabric.Icon\BlazorFabric.Icon.csproj" />
    <ProjectReference Include="..\BlazorFabric.Keytip\BlazorFabric.Keytip.csproj" />
    <ProjectReference Include="..\BlazorFabric.Label\BlazorFabric.Label.csproj" />
    <ProjectReference Include="..\BlazorFabric.Panel\BlazorFabric.Panel.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="wwwroot\dropdown.css" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="3.1.3" />
  </ItemGroup>

</Project>
