@if (ComponentStyle.ClientSide)
{
    @foreach (var rule in ComponentStyle.GlobalCSRules)
    {
        <CSS @key="rule.GetHashCode()" Value="@rule" />
    }
}
else
{
    <style>
    @foreach (var rule in ComponentStyle.GlobalCSRules)
    {
        <CSS @key="rule.GetHashCode()" Value="@rule" />
    }
    </style>
}